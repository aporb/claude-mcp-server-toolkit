# =============================================================================
# Claude MCP Server Toolkit - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual credentials

# =============================================================================
# Core MCP Configuration
# =============================================================================

# GitHub Integration (Required for GitHub MCP Server)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# =============================================================================
# Atlassian Integration (Optional)
# =============================================================================

# Confluence Configuration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@domain.com
CONFLUENCE_API_TOKEN=your_confluence_token

# Jira Configuration  
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your_jira_token

# =============================================================================
# AI Platform APIs (Optional)
# =============================================================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Jan.ai API Configuration
JAN_API_KEY=your_jan_api_key
JAN_API_URL=http://localhost:1337

# OpenAI API (for additional integrations)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (for additional integrations)
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# Platform Selection Configuration
# =============================================================================

# Enable/disable specific AI platform configurations
ENABLE_CLAUDE_DESKTOP=true
ENABLE_CLAUDE_CODE=true
ENABLE_VSCODE_CLINE=false
ENABLE_GEMINI=false
ENABLE_JAN=false

# =============================================================================
# Advanced Configuration
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=mcp

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Security Configuration
ENABLE_SECURITY_AUDIT=true
CONFIG_BACKUP_ENABLED=true

# =============================================================================
# Platform-Specific Paths (Auto-detected, override if needed)
# =============================================================================

# Claude Desktop
CLAUDE_DESKTOP_CONFIG_PATH=~/.config/claude/claude_desktop_config.json

# Claude Code
CLAUDE_CODE_CONFIG_PATH=~/.config/claude-code/mcp.json

# VS Code/Cline
VSCODE_CLINE_CONFIG_PATH=.vscode/mcp.json

# Gemini CLI
GEMINI_CONFIG_PATH=~/.gemini/settings.json

# =============================================================================
# Service-Specific Configuration
# =============================================================================

# Memory Bank Configuration
MEMORY_BANK_DATA_PATH=./data/memory-bank
MEMORY_BANK_BACKUP_ENABLED=true

# Browser Tools Configuration
BROWSER_TOOLS_HEADLESS=true
BROWSER_TOOLS_TIMEOUT=30000

# Context7 Configuration
CONTEXT7_MAX_TOKENS=10000

# Sequential Thinking Configuration
SEQUENTIAL_THINKING_MAX_THOUGHTS=50

# =============================================================================
# Development and Testing
# =============================================================================

# Development Mode
DEV_MODE=false
SKIP_HEALTH_CHECKS=false
ENABLE_DEBUG_LOGGING=false

# Testing Configuration
RUN_INTEGRATION_TESTS=false
TEST_TIMEOUT=30

# =============================================================================
# Notes and Instructions
# =============================================================================

# To get your GitHub Personal Access Token:
# 1. Go to https://github.com/settings/tokens
# 2. Click "Generate new token (classic)"
# 3. Select scopes: repo, workflow, read:org, user:email
# 4. Copy the token and replace "your_github_token_here" above

# To get your Atlassian API tokens:
# 1. Go to https://id.atlassian.com/manage-profile/security/api-tokens
# 2. Create an API token
# 3. Use your email address as username
# 4. Replace the placeholder values above

# To get your Gemini API key:
# 1. Go to https://makersuite.google.com/app/apikey
# 2. Create a new API key
# 3. Replace "your_gemini_api_key" above

# For Jan.ai configuration:
# 1. Install Jan.ai from https://jan.ai/
# 2. Start the local server
# 3. Get your API key from the settings
# 4. Replace the placeholder values above

# Security Note:
# This file contains sensitive information. Ensure it has proper permissions:
# chmod 600 .env
